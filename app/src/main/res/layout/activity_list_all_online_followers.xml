<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/b"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

    <RelativeLayout
        android:id="@+id/invisibleButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/invisible_side"
            android:layout_width="7mm"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/transparent"
            android:padding="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sideButtons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/side_buttons"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="40dip"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_refresh" />

            <ImageButton
                android:id="@+id/english_arabic"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_below="@+id/speak_mode"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="40dip"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/english_selected" />

            <RelativeLayout
                android:id="@+id/users_button_and_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:layout_marginRight="0dp"
                android:padding="0dp"
                android:layout_marginTop="40dip"
                android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/users"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_users" />

            <Spinner
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#d11f08"
                android:layout_toLeftOf="@+id/users"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:visibility="visible"/>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

