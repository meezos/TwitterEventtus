<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/b"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/scroll_view_and_banner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/banner"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="64dip"
        android:scaleType="fitXY"/>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/banner"
        android:background="#000000"
        android:padding="0dp">

        <TextView
            android:id="@+id/tweets"
            android:textColor="#ffffff"
            android:paddingTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="" />

    </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/invisible_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">


        <Button
            android:id="@+id/invisible_side"
            android:layout_width="7mm"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/transparent"
            android:padding="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sideButtons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/side_buttons"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="gone">


            <ImageButton
                android:id="@+id/switch_users"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="40dip"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_settings" />

            <ImageButton
                android:id="@+id/switch_language"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_below="@+id/speak_mode"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dip"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_settings" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>





